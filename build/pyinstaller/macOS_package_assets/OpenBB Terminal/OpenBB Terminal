#!/bin/bash

clear

SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

echo "  _                     _ _                   "
echo " | |                   | (_)                  "
echo " | |     ___   __ _  __| |_ _ __   __ _       "
echo " | |    / _ \ / _\` |/ _\` | | '_ \ / _\` |   "
echo " | |___| (_) | (_| | (_| | | | | | (_| |_ _ _ "
echo " |______\___/ \__,_|\__,_|_|_| |_|\__, (_|_|_)"
echo "                                   __/ |      "
echo "                                  |___/       "

BOOTUP_MESSAGE="
The boot up process might take a while. Please be patient...

Have you checked out Community Routines yet?  You can access them through the OpenBB Hub.
Visit https://www.youtube.com/watch?v=UFh_Ku0fdtY to get started in less than 3 minutes!

"
echo "$BOOTUP_MESSAGE"

# Add some messages we can print out
messages = ("","","","","Did you know that you can search for stocks from a given country by running stocks/search -c COUNTRY-TO_SEARCH")
echo ${messages[$index]}

"$SCRIPTDIR"/.OpenBB/OpenBBTerminal
